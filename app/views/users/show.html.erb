<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <br>
    <br>
    <ol>■■プロフィール■■</ol>
    <ol>年齢：<%= @user.age %></ol>
    <ol>居住地：<%= @user.address %></ol>
    <ol><%= link_to"Followings",followings_user_path(@user)%>: <%= @user.following_users.count %></ol>
    <ol><%= link_to"Followers",followers_user_path(@user)%>: <%= @user.follower_users.count %></ol>
  </aside>
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
      <%#同じこと%>
      <%# @microposts.each do |micropost| %>
      <%# render partial: 'microposts/micropost', locals: { micropost: micropost } %>
      <%# end %>
        <%= render @microposts %>
      </ol>
    <% end %>

  </div>
</div>
